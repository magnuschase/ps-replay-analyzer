{
  "manifest_version": 3,
  "name": "PS Replay Analyzer",
  "description": "Automatically captures and stores Pokemon Showdown battle logs locally.",
  "options_ui": {
    "page": "src/pages/options/index.html"
  },
  "action": {
    "default_popup": "src/pages/popup/index.html",
    "default_icon": {
      "32": "icon-32.png"
    }
  },
  "icons": {
    "128": "icon-128.png"
  },
  "permissions": ["activeTab"],
  "browser_specific_settings": {
    "gecko": {
      "id": "ps-replay-analyzer@jakubkapala.com",
      "strict_min_version": "109.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://play.pokemonshowdown.com/*",
        "http://play.pokemonshowdown.com/*"
      ],
      "js": ["src/pages/content/index.ts"]
    }
  ],
  "devtools_page": "src/pages/devtools/index.html",
  "web_accessible_resources": [
    {
      "resources": ["assets/*.js", "icon-128.png", "icon-32.png"],
      "matches": [
        "https://play.pokemonshowdown.com/*",
        "https://*.pokemonshowdown.com/*"
      ]
    }
  ]
}
